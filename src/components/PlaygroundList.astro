---
import PgCard from "../components/PgCard.astro";
import playground from "../data/playground.json";

---

<section class="Playground pb-20">
    <div class="py-10 xs:flex xs:justify-between md:py-20">
        <h1 class="text-3xl mb-2 font-bold uppercase sm:text-4xl md:text-5xl lg:text-7xl">Playground</h1>
        <p class="text-sm text-balance xs:text-right sm:text-xl lg:text-2xl lg:whitespace-pre-line">A collection of my half-finished projects, random ideas, 
            experiments that are fun, & sometimes just a little bit weird.
        </p>
    </div>
    <div class="grid grid-cols-1 gap-2 lg:grid-cols-2">
        {playground.map((project) => <PgCard project={project} />)}
    </div>
</section>